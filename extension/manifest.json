{
  "manifest_version": 3,
  "name": "TemporalOS",
  "version": "1.0.0",
  "description": "Dynamic clinical information reorganization based on reasoning phase",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://registrar.api.heidihealth.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.heidihealth.com/*",
        "https://scribe.heidihealth.com/*",
        "https://app.heidihealth.com/*"
      ],
      "js": ["dist/content-script.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": [
        "https://*.heidihealth.com/*",
        "https://scribe.heidihealth.com/*",
        "https://app.heidihealth.com/*"
      ]
    }
  ]
}
